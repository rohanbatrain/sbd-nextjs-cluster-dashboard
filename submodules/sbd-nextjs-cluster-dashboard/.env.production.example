# ============================================================================
# SECOND BRAIN DATABASE - PRODUCTION ENVIRONMENT
# ============================================================================
# CRITICAL: Use strong secrets in production!
# Generate JWT secret: openssl rand -hex 32
# Generate Fernet key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Second Brain Database
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
BASE_URL=https://your-domain.com

# ============================================================================
# DOCKER COMPOSE SETTINGS
# ============================================================================
IMAGE_TAG=latest
API_PORT=8000

# MongoDB Configuration (CHANGE THESE!)
MONGODB_USERNAME=your_production_username
MONGODB_PASSWORD=your_production_password_change_me
MONGODB_DATABASE=second_brain_database
MONGODB_URL=mongodb://your_production_username:your_production_password_change_me@mongo:27017/second_brain_database?authSource=admin

# Redis Configuration (CHANGE PASSWORD!)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_change_me
REDIS_URL=redis://:your_redis_password_change_me@redis:6379/0

# Qdrant Configuration (CHANGE API KEY!)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_change_me
QDRANT_HTTPS=False

# ============================================================================
# SECURITY & AUTHENTICATION (CHANGE ALL SECRETS!)
# ============================================================================
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

ENCRYPTION_KEY=CHANGE_ME_generate_with_fernet
FERNET_KEY=CHANGE_ME_generate_with_fernet

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_PERIOD=60

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
CELERY_BROKER_URL=redis://:your_redis_password_change_me@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your_redis_password_change_me@redis:6379/0
CELERY_LOG_LEVEL=info
CELERY_WORKER_CONCURRENCY=8
CELERY_MAX_TASKS_PER_CHILD=500
CELERY_WORKER_REPLICAS=2

# ============================================================================
# AI & LLM CONFIGURATION
# ============================================================================
# Ollama Configuration (if using)
OLLAMA_HOST=http://ollama:11434
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest

# LangChain
LANGCHAIN_ENABLED=True
LANGCHAIN_MODEL_PROVIDER=ollama
LANGCHAIN_TRACING_V2=false

# ============================================================================
# VECTOR SEARCH & RAG CONFIGURATION
# ============================================================================
QDRANT_COLLECTION_NAME=document_embeddings
QDRANT_VECTOR_SIZE=768
QDRANT_DISTANCE_METRIC=Cosine

LLAMAINDEX_ENABLED=True
LLAMAINDEX_EMBED_MODEL=local:BAAI/bge-small-en-v1.5

# ============================================================================
# CORS CONFIGURATION (RESTRICT IN PRODUCTION!)
# ============================================================================
CORS_ENABLED=True
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOW_HEADERS=*

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_AGENTS=True
FEATURE_VOICE_PROCESSING=True
FEATURE_DOCUMENT_PROCESSING=True
FEATURE_MCP_SERVER=True
FEATURE_FAMILY_MANAGEMENT=True
FEATURE_WORKSPACE_MANAGEMENT=True
FEATURE_SHOP=True

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
MCP_ENABLED=True
MCP_SERVER_NAME=SecondBrainMCP
MCP_DEBUG_MODE=False
MCP_ADMIN_TOOLS_ENABLED=False
MCP_SYSTEM_TOOLS_ENABLED=False

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOKI_ENABLED=False
PERFORMANCE_MONITORING_ENABLED=True

# ============================================================================
# UVICORN CONFIGURATION
# ============================================================================
UVICORN_WORKERS=8
